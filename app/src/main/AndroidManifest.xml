<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.mapoe.appproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppProject">
        <activity
            android:name=".CardGameActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".GameSelectionActivity"
            android:exported="true"
            android:label="@string/title_activity_game_selection"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppProject.NoActionBar" />
        <activity
            android:name=".SimpleWheelActivity"
            android:exported="true"
            android:label="@string/title_activity_simple_wheel"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppProject.NoActionBar" />
        <activity
            android:name=".GameEndActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CharacterChooseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>