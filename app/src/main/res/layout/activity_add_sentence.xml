<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/add_sentence_layout">

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>
    <!-- layout 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addText_layout"
        android:orientation="vertical"
        android:visibility="gone">
        <Spinner
            android:id="@+id/game_mode"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <Spinner
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_edit"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/edit_shape"
                    android:fontFamily="@font/convergence"
                    android:hint="@string/text"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    />


                <ImageView
                    android:id="@+id/add_player_text"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_player" />
            </LinearLayout>
            <Button
                android:id="@+id/answer_button"
                android:layout_marginTop="80dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                android:text="@string/show_answer"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:backgroundTint="@null"
                />

        </LinearLayout>
    </LinearLayout>
    <!-- layout 2 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/answer_layout"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/popupbg_shape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer_edit"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/edit_shape"
                android:fontFamily="@font/convergence"
                android:hint="@string/show_answer"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                />

            <ImageView
                android:id="@+id/add_player_answer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/add_player" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="70dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginRight="50dp"
                android:id="@+id/edit_button1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/convergence"
                android:hint="@string/show_answer"
                android:gravity="center"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_button2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/convergence"
                android:hint="@string/show_answer"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/left_arrow"
                android:id="@+id/previous_arrow"
                android:layout_marginRight="220dp"/>
        <ImageView

            android:id="@+id/next_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/right_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <!-- layout 3 -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/point_layout"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/popupbg_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <Spinner
                android:id="@+id/pointList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="POUET"
            android:id="@+id/test"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="100dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/left_arrow"
                android:id="@+id/previous1_arrow"
                android:layout_marginRight="220dp"/>

            <ImageView
                android:id="@+id/validate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/check"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>