<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_list"
    android:id="@+id/add_sentence_layout">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_sentence"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/info_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/info_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/dynamicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <TextView
            android:id="@+id/question_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/game_mode_edit_text"
            android:textColor="@color/white"/>

        <!-- Le layout pour savoir le mode de jeu-->
        <LinearLayout
            android:id="@+id/game_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/button_ape_chill"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                app:backgroundTint="@null"
                android:layout_weight="1"
                android:text="@string/apechill_title"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/button_ape_piment"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button2"
                app:backgroundTint="@null"
                android:textAllCaps="false"
                android:text="@string/ApePiment"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!-- Le layout pour qu'il rentre la phrase-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sentence_edit_layout"
            android:visibility="gone">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sentence_edit_text"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/edit_shape"
                    android:fontFamily="@font/convergence"
                    android:hint="@string/text"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="5"
                    android:maxLength="50"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    />


                <ImageView
                    android:id="@+id/add_player_to_sentence"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/add_player" />
            </LinearLayout>
            <Button
                android:id="@+id/sentence_edit_next_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                app:backgroundTint = "@null"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeTextType="uniform"
                android:text="@string/next"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <!-- Le layout pour qu'il rentre la réponse-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_edit_layout"
            android:visibility="gone">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/answer_edit_text"
                    android:layout_width="245dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/edit_shape"
                    android:fontFamily="@font/convergence"
                    android:hint="@string/show_answer"
                    android:inputType="textMultiLine|textCapSentences"
                    android:maxLines="5"
                    android:maxLength="50"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grey"
                    />


                <ImageView
                    android:id="@+id/add_player_to_answer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/add_player" />
            </LinearLayout>
            <Button
                android:id="@+id/answer_edit_next_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button"
                app:backgroundTint = "@null"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeTextType="uniform"
                android:text="@string/next"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <!-- Le layout pour qu'il rentre le bouton réponse et le bouton fail-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_button_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginRight="30dp">

                    <CheckBox
                        android:checked="true"
                        android:id="@+id/right_answer_is_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/right_answer"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="center"
                        android:id="@+id/edit_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/convergence"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="18sp"
                        android:hint="@string/yes_button"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLength="10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/right_answer_is_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/right_answer"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_gravity="center"
                        android:id="@+id/edit_button2"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/convergence"
                        android:hint="@string/no_button"
                        android:inputType="textMultiLine|textCapSentences"
                        android:lines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:maxLength="10"
                        />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/buttons_edit_next_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                app:backgroundTint = "@null"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <!-- Le layout pour qu'il rentre le nombre de points-->
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/point_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/button_1_point"
                        android:background="@drawable/button"
                        app:backgroundTint = "@null"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/_1_point"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:id="@+id/button_2_points"
                        android:background="@drawable/button"
                        app:backgroundTint = "@null"
                        android:layout_width="80dp"
                        android:textColor="@color/white"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/_2_points"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_3_points"
                        android:background="@drawable/button"
                        app:backgroundTint = "@null"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="@string/_3_points"
                        android:layout_marginRight="10dp"/>
                    <Button
                        android:id="@+id/button_4_points"
                        android:background="@drawable/button"
                        app:backgroundTint = "@null"
                        android:layout_width="80dp"
                        android:textColor="@color/white"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="@string/_4_points"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Bouton pour visualiser le résultat -->
        <Button
            android:visibility="gone"
            android:layout_marginVertical="10dp"
            android:id="@+id/visualize_button"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/visualize"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp"
        android:background="#8B000E60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dynamicLayout" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textViewResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sumury_text"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_view"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResume">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Le layout qui contient le gameMode -->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/scrollable_game_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game_mode"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>

                <Spinner
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/game_mode_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <!-- Le layout qui contient la phrase -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/scrollable_sentence_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_sentence"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/scrollable_sentence_edit_text"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/edit_shape"
                        android:fontFamily="@font/convergence"
                        android:hint="@string/sentence"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:maxLength="50"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        />

                    <ImageView
                        android:id="@+id/scrollable_add_player_to_sentence"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/add_player" />
                </LinearLayout>

            </LinearLayout>
            <!-- Le layout qui contient la réponse -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/scrollable_answer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_answer"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/scrollable_answer_edit_text"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/edit_shape"
                        android:fontFamily="@font/convergence"
                        android:hint="@string/show_answer"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="5"
                        android:maxLength="50"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey"
                        />

                    <ImageView
                        android:id="@+id/scrollable_add_player_to_answer"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_player"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- Le layout qui contient les boutons -->

            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/scrollable_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <CheckBox
                            android:checked="true"
                            android:id="@+id/scrollable_right_answer_is_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/right_answer"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_gravity="center"
                            android:id="@+id/scrollable_edit_button1"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/button_shape"
                            android:fontFamily="@font/convergence"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="18sp"
                            android:hint="@string/yes_button"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:maxLength="10"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/scrollable_right_answer_is_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/wrong_answer"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/scrollable_edit_button2"
                             android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:background="@drawable/button_shape"
                            android:fontFamily="@font/convergence"
                            android:hint="@string/no_button"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lines="1"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:maxLength="10"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- Layout qui contient les points -->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:id="@+id/scrollable_point_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_mark"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"/>

                <Spinner
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/scrollable_point_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>