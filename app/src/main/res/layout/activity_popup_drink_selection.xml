<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="350dp"
    android:layout_height="500dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/convergence"
        android:gravity="center"
        android:text="C'est ici que sera le titre"
        android:textColor="@color/black"
        android:textSize="34sp">

    </TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/drink0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drink_0" />

        <ImageView
            android:id="@+id/drink1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drink_1" />

        <ImageView
            android:id="@+id/drink2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drink_2" />

        <ImageView
            android:id="@+id/drink3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drink_3" />

    </LinearLayout>

</LinearLayout>